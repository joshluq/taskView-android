<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/default_3_5"
    >
    <LinearLayout
        android:layout_marginStart="@dimen/default_3_5"
        android:layout_marginEnd="@dimen/default_3_5"
        android:layout_marginBottom="@dimen/default_1_5"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="0.8"
            android:id="@+id/tv_username" />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:src="@drawable/ic_account_circle"/>
    </LinearLayout>
<View
    android:layout_width="match_parent"
    android:background="@color/colorGray"
    android:layout_height="@dimen/default_1_1"/>
</LinearLayout>