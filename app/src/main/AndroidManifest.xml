<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tektonlabs.taskview">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".ui.activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.activities.SignInActivity" />
        <activity android:name=".ui.activities.ProjectsActivity" />
        <activity android:name=".ui.activities.SignUpActivity" />
        <activity android:name=".ui.activities.BoardActivity" />
        <activity
            android:name=".ui.activities.AddTaskActivity"
            android:label="@string/str_add_task"
            android:theme="@style/AppTheme" />
        <activity android:name=".ui.activities.SearchUsersActivity"
            android:label="@string/str_search_user"
            android:theme="@style/AppTheme"/>
    </application>

</manifest>